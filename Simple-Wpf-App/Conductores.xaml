<Window x:Class="Simple_Wpf_App.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_Wpf_App"
        mc:Ignorable="d"
        Title="Conductores" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Registro de Conductores" FontSize="24" Margin="0,50,0,20" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#448AFF"/>

            <Label Content="Nombre" Margin="280,10,0,10" Foreground="DarkGray"></Label>
            <TextBox x:Name="txtNombre" Width="230"></TextBox>

            <Label Content="Licencia" Margin="280,10,0,10" Foreground="DarkGray"></Label>
            <TextBox x:Name="txtLicencia" Width="230"></TextBox>

            <Label Content="Transporte" Margin="280,10,0,10" Foreground="DarkGray"></Label>
            <TextBox x:Name="txtTransporte" Width="230"></TextBox>

            <Button 
        Content="Regístrate"
        Width="150"
        Height="35"
        Margin="0,30,0,0"
        Background="#448AFF"
        Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
